.Tooltip {
  width: 0px;
  height: 0px;
  position: relative;
}

.Tooltip::after {
  content: "";
  position: absolute;
  border-style: solid;
}

.Tooltip--topRight::after,
.Tooltip--topLeft::after,
.Tooltip--topCenter::after {
  bottom: -5px;
  margin-left: -5px;
  border-width: 5px;
  border-color: var(--color-basic-darkGray) transparent transparent transparent;
}

.Tooltip--bottomRight::after,
.Tooltip--bottomLeft::after,
.Tooltip--bottomCenter::after {
  left: -5px;
  top: -5px;
  border-width: 5px;
  border-color: transparent transparent var(--color-basic-darkGray) transparent;
}

.Tooltip--rightTop::after,
.Tooltip--rightBottom::after {
  left: -5px;
  margin-top: -5px;
  border-width: 5px;
  border-color: transparent var(--color-basic-darkGray) transparent transparent;
}

.Tooltip--leftTop::after,
.Tooltip--leftBottom::after {
  left: -5px;
  margin-top: -5px;
  border-width: 5px;
  border-color: transparent transparent transparent var(--color-basic-darkGray);
}

.Tooltip__text {
  color: var(--color-basic-white);
  display: inline-block;
  position: absolute;
  background-color: var(--color-basic-darkGray);
  padding: 5px 5px;
  border-radius: 5px;
  animation: TooltipIn 0.5s ease 0s 1 normal;
}

@keyframes TooltipIn {
    0% {opacity: 0}
    100% {opacity: 1}
}

.Tooltip--topRight .Tooltip__text,
.Tooltip--topLeft .Tooltip__text {
  bottom: 5px;
}

.Tooltip--bottomRight .Tooltip__text,
.Tooltip--bottomLeft .Tooltip__text {
  top: 5px;
}

.Tooltip--topCenter .Tooltip__text {
  bottom: 0px;
  padding: 5px 0px;
  background-color: transparent;
}

.Tooltip--bottomCenter .Tooltip__text {
  left: 0px;
  padding: 5px 0px;
  background-color: transparent;
}

.Tooltip--topCenter .Tooltip__text .Tooltip--centerHorizontal,
.Tooltip--bottomCenter .Tooltip__text .Tooltip--centerHorizontal {
  position: relative;
  margin-left: -50%;
  background-color: var(--color-basic-darkGray);
  padding: 5px 5px;
  border-radius: 5px;
  display: inline-block;
}

.Tooltip--topRight .Tooltip__text,
.Tooltip--bottomRight .Tooltip__text {
  right: -15px;
}

.Tooltip--topLeft .Tooltip__text,
.Tooltip--bottomLeft .Tooltip__text {
  left: -15px;
}

.Tooltip--rightTop .Tooltip__text {
  top: -10px;
  left: 5px;
}

.Tooltip--leftTop .Tooltip__text {
  top: -10px;
  right: 5px;
}

.Tooltip--rightBottom .Tooltip__text {
  top: -15px;
  left: 5px;
}

.Tooltip--leftBottom .Tooltip__text {
  top: -15px;
  right: 5px;
}
